SRC_DIR=.

CC = gcc
CPP = g++
LD = g++
AR = ar

CFLAGS = -Wall -O2

INC := -I$(SRC_DIR)
LIBDIR = 

# Makefile include to help find GL Libraries
include $(SRC_DIR)/findGL.mk
# operating system
# HOST_OS   := $(shell uname -s 2>/dev/null | tr "[:upper:]" "[:lower:]")
# TARGET_OS ?= $(HOST_OS)
# include $(SRC_DIR)/findgllib.mk

LIB = -lglut -lGLU -lm -lEGL -lGLESv2 #-lGL
LDFLAGS =

INC_RELEASE = $(INC)
CFLAGS_RELEASE = $(CFLAGS)
RESINC_RELEASE = $(RESINC)
RCFLAGS_RELEASE = $(RCFLAGS)
LIBDIR_RELEASE = $(LIBDIR)
LIB_RELEASE = $(LIB)
LDFLAGS_RELEASE = $(LDFLAGS) -s
OBJDIR_RELEASE = objs
DEP_RELEASE = 
OUT_RELEASE = ../bin/pboUnpack

OBJ_RELEASE = $(OBJDIR_RELEASE)/glExtension.o $(OBJDIR_RELEASE)/main.o $(OBJDIR_RELEASE)/Timer.o

all: release

check.deps:
	@echo $(INC)
	@echo $(LIBDIR)

clean: clean_release

release: $(OUT_RELEASE)

$(OUT_RELEASE): $(OBJ_RELEASE) $(DEP_RELEASE)
	test -d ../bin || mkdir -p ../bin
	$(LD) $(LDFLAGS_RELEASE) $(LIBDIR_RELEASE) -o $(OUT_RELEASE) $(OBJ_RELEASE) $(LIB_RELEASE)

$(OBJDIR_RELEASE)/glExtension.o: glExtension.cpp
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)
	$(CPP) $(CFLAGS_RELEASE) $(INC_RELEASE) -c -o $(OBJDIR_RELEASE)/glExtension.o glExtension.cpp

$(OBJDIR_RELEASE)/main.o: main.cpp
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)
	$(CPP) $(CFLAGS_RELEASE) $(INC_RELEASE) -c -o $(OBJDIR_RELEASE)/main.o main.cpp

$(OBJDIR_RELEASE)/Timer.o: Timer.cpp
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)
	$(CPP) $(CFLAGS_RELEASE) $(INC_RELEASE) -c -o $(OBJDIR_RELEASE)/Timer.o Timer.cpp


clean_release:
	rm -f $(OBJ_RELEASE) $(OUT_RELEASE)

.PHONY: clean clean_release

